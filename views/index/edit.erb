        <form action="/life_events/<%=@event_to_update.id%>" method="post">

          <div class="form-group">
            <input type="text" id="mov_name" name="event_name"placeholder="Event Name" class="form-control">
          </div>
          <div class="form-group">
            <textarea class="form-control" name ="event_desc" id="mov_desc" rows="3" placeholder="Description"></textarea>
